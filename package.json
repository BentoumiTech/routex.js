{
  "name": "routex",
  "version": "0.1.0",
  "description": "Tiny library to manage dynamic routes in Next.js",
  "source": "src/index.js",
  "main": "dist/routex.js",
  "module": "dist/routex.es.js",
  "author": "alexhoma <alexcm.14@gmail.com>",
  "license": "ISC",
  "keywords": [
    "next",
    "nextjs",
    "react",
    "reactjs",
    "router",
    "routes",
    "routing",
    "dynamic-routes",
    "universal",
    "isomorphic"
  ],
  "scripts": {
    "build:client": "microbundle",
    "build:server": "microbundle ./src/server.js -o ./dist/routex/server.js --external server",
    "build:universal": "npm run build:client && npm run build:server",
    "test": "jest",
    "mutants": "stryker run",
    "size": "bundlesize",
    "prepare": "npm t -- --coverage && npm run build:universal && npm run size",
    "release": "npm run prepare && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "peerDependencies": {
    "next": ">=2",
    "react": "^15.4.2 || ^16"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@stryker-mutator/core": "^2.0.0",
    "@stryker-mutator/html-reporter": "^2.0.0",
    "@stryker-mutator/javascript-mutator": "^2.0.0",
    "@stryker-mutator/jest-runner": "^2.0.0",
    "babel-jest": "^24.8.0",
    "bundlesize": "^0.17.1",
    "jest": "^24.8.0",
    "microbundle": "^0.11.0",
    "next": "^8.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6"
  },
  "dependencies": {
    "path-to-regexp": "^3.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/routex.js",
      "maxSize": "1 Kb"
    },
    {
      "path": "./dist/routex/server.js",
      "maxSize": "400 B"
    }
  ]
}
